#!/usr/bin/make -f

build: build-stamp
build-stamp:
	./configure
	make
	touch build-stamp

install: install-stamp
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_installdirs
	cp -rf ./awstatsmodule.app debian/openpanel-mod-awstats/var/opencore/modules/AWStats.module/
	cp module.xml debian/openpanel-mod-awstats/var/opencore/modules/AWStats.module/module.xml
	install -m 755 verify debian/openpanel-mod-awstats/var/opencore/modules/AWStats.module/verify

binary-indep: build install

binary-arch: build install
	dh_installdocs -a
	dh_installdeb -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

clean:
	rm -f build-stamp install-stamp
	[ ! -f makeinclude ] || make clean
	dh_clean


.PHONY: build binary binary-arch binary-indep clean install
