#!/usr/bin/make -f


BUILD_ROOT=$(CURDIR)/debian/tmp
install:
trm -rf ${BUILD_ROOT}
tmkdir -p ${BUILD_ROOT}/var/opencore/modules/AWStats.module
tcp -rf ./awstatsmodule.app ${BUILD_ROOT}/var/opencore/modules/AWStats.module/
tcp module.xml ${BUILD_ROOT}/var/opencore/modules/AWStats.module/module.xml
tinstall -m 755 verify ${BUILD_ROOT}/var/opencore/modules/AWStats.module/verify
tmkdir -p ${BUILD_ROOT}/etc/awstats

build:
t./configure
tmake
binary-indep:

binary-arch binary: build install
	if [ -d debian/tmp ] ; then dh_install -a --sourcedir=debian/tmp ; fi
	dh_installdocs -a
	dh_installdeb -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

.PHONY: build binary binary-arch binary-indep clean install
